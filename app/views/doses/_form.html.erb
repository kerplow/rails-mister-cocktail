<%= simple_form_for [@cocktail, @dose], html: { class: "form-inline", style: 'display: inline'} do |f| %>
  <%= f.input :description, label: false, :placeholder => 'ex:2cl' %> of
  <%= f.association :ingredient, collection: @ingredients, label: false, selected: 1 %>
  <%= f.button :submit, 'add ingredient', { class: 'btn btn-primary' } %>
<% end %>
